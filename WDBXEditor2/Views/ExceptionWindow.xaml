<Window x:Class="WDBXEditor2.Views.ExceptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WDBXEditor2.Views"
        mc:Ignorable="d"
        Title="An unexpected error occured" Height="290" Width="376" ResizeMode="NoResize" Icon="/Assets/icon.ico">
    <Grid Margin="10,0,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="53*"/>
            <ColumnDefinition Width="36*"/>
        </Grid.ColumnDefinitions>
        <TextBlock TextWrapping="WrapWithOverflow" Grid.ColumnSpan="2">The application encountered an unexpected error performing this action. For details see below.</TextBlock>
        <TextBox 
            Name="TxtException" 
            TextWrapping="WrapWithOverflow" 
            Height="200" 
            VerticalAlignment="Top" 
            Margin="0,40,0,0" 
            Grid.ColumnSpan="2"
            VerticalScrollBarVisibility="Visible"
            IsReadOnly="True"
         />
    </Grid>
</Window>
